<?xml version='1.0' encoding='utf-8'?>
<manifest android:versionName="1.0" android:versionCode="1" package="scaloid.playlistr" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:targetSdkVersion="16" android:minSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:label="@string/app_name" android:allowBackup="true">
        <activity android:label="@string/app_name" android:name="scaloid.playlistr.views.HelloScaloid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        // Needed for LoginActivity to work
        <activity android:theme="@android:style/Theme.Translucent.NoTitleBar" android:name="com.spotify.sdk.android.authentication.LoginActivity"/>
    <uses-library android:name="android.test.runner"/></application>

<instrumentation android:name="android.test.InstrumentationTestRunner" android:label="Test Runner" android:targetPackage="scaloid.playlistr"/></manifest>